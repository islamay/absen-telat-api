{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES2021",
        "lib": [
            "ES2021.Promise"
        ],
        "module": "CommonJS",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}